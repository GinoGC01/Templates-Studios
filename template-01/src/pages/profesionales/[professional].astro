---
import Layout from "../../layouts/Layout.astro"
import Footer from "../../components/Astro/sections/Footer.astro"
import Header from "../../components/React/header.jsx"
import {src} from '../../data/map.js'


import { team } from "../../data/team"
import Profesional from "../../components/Astro/sections/Profesional.astro"
const {professional} = Astro.params

const {nombre, especialidades, posicion, jurisdiccion, carreras, biografia, objetivos, valores, images, contact} = team.find(perfil => perfil.nombre == professional)

---

<Layout title={nombre}>
    <Header client:load/>
    <Profesional 
	posicion={posicion}
	jurisdiccion={jurisdiccion}
	imagen={images}
	biografia={biografia} 
	carreras={carreras} 
	contactos={contact} 
	especialidades={especialidades} 
	nombre={nombre} 
	objetivos={objetivos} 
	valores={valores}/>
    <Footer srcMaps={src}/>
</Layout>

<style is:global>
	:root {
		/* variables header principal  */
    	--span-menu-hamb: rgb(255, 255, 255); 
		--a-menu-hamb: rgb(255, 255, 255);
		--background-nav: grey;

		/* background gradient main */
		--firstvalue: rgba(8,8,8, .8);
		--secondvalue: rgba(45, 62, 158, 0.5);

		/* padding sections */
		--paddingsection-inline:20px;

		/* subtitulos */

		--subtitlesection: 1.7em;
		--paddingsubtilteSection: 20px 30px;

	}
	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Roboto', sans-serif;
		list-style: none;
		text-decoration: none;
		scroll-behavior: smooth;
	}
</style>