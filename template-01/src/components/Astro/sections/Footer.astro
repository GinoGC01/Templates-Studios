<style>
    footer{
        position: relative;
        margin-top: 20px;
        padding-top: 20px;
        background-color: rgba(0, 0, 0, 0.884);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: .5em
        
    }
    footer header{
        width: 90%;
        text-align: center;
        padding-bottom: 10px;
        color: white;
        font-size: 1.2em;
        border-bottom: 1px solid white;
    }

    .content{
        width: 100%;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    #map-footer{
        grid-column: 1 / 2;
        background-color: antiquewhite;
        width: 100%;
        height: 100%;
    }

    footer ul{
        grid-column: 0 / 1;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: .5em;
        border-right: 1px solid white;

    }

    footer a{
        display: block;
        padding: 0px 20px 5px;

        color: white;
    }

    .copy{
        width: 100%;
        text-align: center;
        padding: 10px 0;
        background-color: white;
    }

    .copy p{
        text-wrap: pretty;
    }
</style>