---
interface Props  {
    img:string,
    nombre: string,
    especialidad: string[],
    presentacion: string,
    id: string
}
const {img, nombre, especialidad, presentacion, id} = Astro.props
import CallToActions from "../ancors/callToActions.astro"
---
<li id={id}>
    <figure>
        <img src={img} alt=`Foto de ${nombre}, abogado` transition:name={`image-${nombre}`} loading="lazy"/>
    </figure>
    <section>
        <header>
            <h4>{nombre}</h4>
            <strong>- {especialidad[0]} -</strong>   
        </header>
        <p>{presentacion}</p>
        <div class="button">
            <CallToActions blank={false} link={`/profesionales/${nombre}`} text="Saber mas" styles={true} color="#fff" background="rgba(0, 0, 0, 0.5)"/>
        </div>
    </section>
</li>

<style>
        li{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: .5em;
        margin-top:20px 
    }

    section{
        display: flex;
        flex-direction: column;
        gap: .7em;
        width: 100%;
        padding: 0;
        align-items: flex-start;
        justify-content: space-between;
    }

    li section>header{
        display: flex;
        flex-direction: column;
        width: 100%;
        gap:.3em;
        align-items: center;
        justify-content: center;
    }

    li section>header h4{
        font-size: 1.2em;
        font-weight: bold;
    }

    li section>header strong{
        font-weight: 100;
        font-size: 1.1em;
        opacity: .7;
    }

    .button{
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
    }

    /* imagen */

    figure{
        width: 100%;
        height: 350px;
        position: relative;
        padding: 10px 30px 0;
        border-top: 1px solid rgba(128, 128, 128, 0.274) ;
    }

     figure::after{
        content: '';
        width: 97%;
        height: 350px;
        position: absolute;
        border-radius: 40px;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        background-color: black;
        background: linear-gradient(0deg, var(--secondvalue) 0%, transparent 50%, transparent 100%);
        z-index: -1;
    }

    img{
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 0 -15%;

    }
</style>